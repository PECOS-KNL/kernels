% custom style commands

\newcommand{\dummytext}{ \textcolor{pecos3}{blahQ} }

\newcommand{\pecostitleoneline}[1]{\title{{\uppercase{#1}}\\[0.1in]
                                   {\uppercase{\dummytext}} }}

\newcommand{\pecostitletwolines}[2]{\title{{\uppercase{#1}} \\[0.1in]
                                   {\uppercase{#2}} }}
\newcommand{\pecosauthor}[1]{\author{{#1}}}
\newcommand{\pecosemailaddr}[1]{\newcommand{\insertemailaddr}{#1}}
\newcommand{\pecosbold}[1]{{\color{pecos2}{#1}}}
\newcommand{\pecosreallybold}[1]{{\color{pecos6}{#1}}}


\newcommand{\pecostransblock}[2]{
\setbeamercolor*{block title}{fg=pecos2,bg=pecos5}
\setbeamercolor*{block body}{fg=black,bg=pecos5}
\begin{block}{\begin{flushleft}\begin{Large}#1\end{Large}\end{flushleft}}
                                  #2\end{block}
\setbeamercolor*{block body}{fg=black,bg=white}
\setbeamercolor*{block title}{fg=black,bg=white}
}


\newcommand{\pecosctblock}[3]{
\setbeamercolor*{block title}{fg=white,bg=pecos3}
\setbeamercolor*{block body}{fg=black,bg=pecos5}
\begin{block}{\begin{flushleft}\begin{Large}#1\end{Large}\end{flushleft}}
                                  #2\end{block}
\setbeamercolor*{block body}{fg=black,bg=white}
\setbeamercolor*{block title}{fg=black,bg=white}
}

\newcommand{\pecoscfblock}[3]{
\setbeamercolor*{block title}{fg=pecos2,bg=pecos5}
\setbeamercolor*{block body}{fg=white,bg=pecos3}
\setbeamercolor{itemize item}{fg=pecos6}
\setbeamercolor{itemize subitem}{fg=pecos6}
\setbeamercolor{itemize subsubitem}{fg=pecos6}
\begin{block}{\begin{flushleft}\begin{Large}#1\end{Large}\end{flushleft}}
                                  #2\end{block}
\setbeamercolor{itemize subitem}{fg=black}
\setbeamercolor{itemize subsubitem}{fg=black}
\setbeamercolor{itemize item}{fg=black}
\setbeamercolor{itemize subitem}{fg=black}
\setbeamercolor{itemize subsubitem}{fg=black}
}

\newcommand{\pecosctfblock}[3]{
\setbeamercolor*{block title}{fg=white,bg=pecos3}
\setbeamercolor*{block body}{fg=white,bg=pecos3}
\setbeamercolor{itemize item}{fg=pecos6}
\setbeamercolor{itemize subitem}{fg=pecos6}
\setbeamercolor{itemize subsubitem}{fg=pecos6}
\begin{block}{\begin{flushleft}\begin{Large}#1\end{Large}\end{flushleft}}
                                  #2\end{block}
\setbeamercolor{itemize subitem}{fg=black}
\setbeamercolor{itemize subsubitem}{fg=black}
\setbeamercolor{itemize item}{fg=black}
\setbeamercolor{itemize subitem}{fg=black}
\setbeamercolor{itemize subsubitem}{fg=black}
}

\newcommand{\pecosinnerblock}[2]{
\setbeamercolor*{block body}{bg=threesome,fg=mare}
\setbeamercolor*{block title}{fg=mare,bg=nosur}
\setbeamercolor*{itemize item}{fg=mare}
\setbeamercolor*{itemize subitem}{fg=mare}
\setbeamercolor*{itemize subsubitem}{fg=mare}
\begin{block}{\begin{flushleft}#1\end{flushleft}}
              #2\end{block}
\setbeamercolor*{normal text}{fg=black}
\setbeamercolor*{itemize item}{fg=wine}
\setbeamercolor*{itemize subitem}{fg=wine}
\setbeamercolor*{itemize subsubitem}{fg=wine}
}


\newcommand{\pecosblock}[2]{\pecostransblock{\centerline{#1}}{#2}}

\newcommand{\pecosaltblock}[2]{\pecosctblock{\centerline{#1}}{#2}}

\newcommand{\pecoscolorblock}[2]{\pecoscfblock{\centerline{#1}}{#2}}

\newcommand{\pecosaltcolorblock}[2]{\pecosctfblock{\centerline{#1}}{#2}}

\newcommand{\pecosreferencesblock}{\pecostransblock{\centerline{References}}{
                                   \bibliographystyle{siam}\bibliography{poster.bib}}}



